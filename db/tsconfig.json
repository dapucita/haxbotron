{
  "compilerOptions": {
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    
    "target": "ES2018",
    "module": "commonjs",
    "allowJs": true,
    "resolveJsonModule": true,
    
    "outDir": "./out",
    "pretty": true,
    "listFiles": true,
    "removeComments": true,
    
    "strict": true,
    "esModuleInterop": true,

    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "exclude": [
    "out",
    "node_modules"
  ]
}